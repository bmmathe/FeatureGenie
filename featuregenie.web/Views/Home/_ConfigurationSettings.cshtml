@model IEnumerable<featuregenie.web.Models.ConfigurationSetting>
<div class="col-md-12">
    @if (Model.Count > 0)
    {
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Value)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ConfigurationId }, new { @class = "btn" })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.ConfigurationId }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
            <tr>
                <td colspan="4">
                    <a href="#" data-toggle="modal" data-target="#createConfigurationSettingModal"><i class="fa fa-plus" style="color: green"></i> Add</a>
                </td>
            </tr>
        </table>
    }
    else
    {
        <h3>
            No configuration settings available.  Add a new setting <a href="#" data-toggle="modal" data-target="#createConfigurationSettingModal">here.</a>
        </h3>
    }
</div>