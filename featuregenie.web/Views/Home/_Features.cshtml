@model List<featuregenie.web.Models.Feature>
<div class="col-md-12">
    @if (Model.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Feature ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Is Enabled
                    </th>
                    <th>
                        Start Time
                    </th>
                    <th>
                        End Time
                    </th>
                    <th>
                        Ratio
                    </th>
                    <th>

                    </th>            
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model)
                {
                    <tr>
                        <td>
                            @row.FeatureId
                        </td>
                        <td>
                            @row.Name
                        </td>
                        <td>
                            @row.IsEnabled
                        </td>
                        <td>
                            @row.StartTime
                        </td>
                        <td>
                            @row.EndTime
                        </td>
                        <td>
                            @row.Ratio
                        </td>
                        <td>
                            <a href="#" class="btn btn-sm" data-action="edit-feature" data-feature-id="@row.FeatureId">Edit</a>
                            <a href="#" class="btn btn-sm btn-danger" data-action="delete-feature" data-feature-id="@row.FeatureId">Delete</a>
                        </td>                    
                    </tr>
                }
            <tr>
                <td colspan="7">
                    <a href="#" data-toggle="modal" data-target="#createFeatureModal"><i class="fa fa-plus" style="color: green"></i> Add</a>
                </td>
            </tr>
            </tbody>
        </table>
    }
    else
    {
        <h3>
            No features available.  Add a new feature <a href="#" data-toggle="modal" data-target="#createFeatureModal">here.</a>
        </h3>
    }
</div>